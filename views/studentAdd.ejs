<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>中學生寫作平台</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <!-- bootstrap的CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">

  <style>
    .register {
      padding: 20px;
      font-weight: 700;
      border: #FFF solid 1px;
      -moz-border-radius: 10px;
      /* Gecko browsers */
      -webkit-border-radius: 10px;
      /* Webkit browsers */
      border-radius: 10px;
      /* W3C syntax */
    }
  </style>

  <script language="javascript">
    function Check()  // 验证表单数据有效性
    {
      // if (messages)
      // {
      //   window.alert(messages);
      //   return false;
      // }
      if (document.send.user_id.value == "") {
        window.alert('請輸入用戶名!');
        return false;
      }
      if (document.send.user_id.value.length < 3) {
        window.alert('用戶名子長度必須大於3!');
        return false;
      }
      if (document.send.user_password.value == "") {
        alert('請輸入密碼!');
        return false;
      }
      if (document.send.user_password.value.length < 6) {
        alert('密碼長度必須大於6!');
        return false;
      }
      if (document.send.user_password.value != document.send.chkpwd.value) {
        alert('密碼不一致!');
        return false;
      }
      if (document.send.mail.value == "") {
        alert('請輸入Email!');
        return false;
      }
      if (document.send.mail.value.indexOf("@") == -1) {
        alert('請輸入有效的email地址!'); return false;
      }

      return true;
    }
  </script>

</head>

<body>

  <!-- 注册表单开始 -->
  <div class="container-fluid">
    <div class="row">

      <div class="col">
        <img src="images/register.png" style="width:50vw">
      </div>

      <div class="col">
        <form action="" method="post" class="form-horizontal" onSubmit="return Check()" name="send" style="margin: 8% 15% 15% 15%;">
          <h1 class="page_title ">立即註冊享受寫作!</h1>
          <div class="form-group">
            <label for="user_id" class=" control-label">用戶名：</label>
            <div class="input-group">
              <input type="text" class="form-control" name="user_id" placeholder="請輸入用户名">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
              </div>
            </div>
            <span style="color:red">
              <%= messages %>
            </span>
          </div>
          <div class="form-group">
            <label for="user_password" class="control-label">密碼：</label>
            <div class="input-group">
              <input type="password" class="form-control" name="user_password" placeholder="請輸入密碼（六位以上）">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="chkpwd" class="control-label">確認密碼：</label>
            <div class="input-group">
              <input type="password" class="form-control" name="chkpwd" placeholder="請確認密碼">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-exclamation-sign"></span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="school" class="control-label">學校：</label>
            <div class="input-group">
              <input type="text" class="form-control" name="school" placeholder="請輸入學校名稱">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
              </div>
            </div>
          </div>
          <div class="form-group ">
            <label for="grade">年級</label>
            <select name="grade" class="form-control">
              <option value="1" selected>一</option>
              <option value="2">二</option>
              <option value="3">三</option>
            </select>
          </div>
          <div class="form-group">
            <label for="mail" class="control-label">信箱：</label>
            <div class="input-group">
              <input type="text" class="form-control" name="mail" placeholder="請輸入有效信箱">
              <div class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <button type="reset" class="btn btn-default btn-block">
                <b>&nbsp&nbsp清空&nbsp&nbsp</b>
                <span class="glyphicon glyphicon-remove"></span>
              </button>
            </div>
            <div class="col">
              <button type="submit" class="btn btn-info btn-block">
                <b>&nbsp&nbsp提交&nbsp&nbsp</b>
                <span class="glyphicon glyphicon-arrow-right"></span>
              </button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
  <!-- 注册表单结束 -->
  <div id="footer">
    吳穎沺老師網路與科學學習研究團隊 Copyright© 2018.
  </div>
  <!-- bootstrap的CND -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>