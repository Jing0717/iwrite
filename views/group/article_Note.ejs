  <script>

    $(document).ready(function () {
      //工具包點擊顯示及收合
      var w2 = $("#tool_scroll").width();

      $("#tool_tab").click(function () { //滑鼠點擊時
        if ($("#tool_scroll").css('right') == '-' + w2 + 'px') {
          $("#tool_scroll").animate({ right: '0px' }, 500, 'swing');
        } else {
          $("#tool_scroll").animate({ right: '-' + w2 + 'px' }, 500, 'swing');
        }
      });

      $('#bar_icon').click(function () {
        if (!$('.see_collect').hasClass('mobile-menu-left')) {
          $('.head').addClass('mobile-left');
          $('.see_collect').addClass('mobile-menu-left');
        } else {
          $('.see_collect').removeClass('mobile-menu-left');
          $('.head').removeClass('mobile-left');
        }
      });

      //儲存筆記
      $('#save').click(function () {
        var note = $('#note').val();
        var user_id = $(this).data("value");
        var p_id = $(this).data("pid");
        var article = $(this).data("article");
        var article_subject = $(this).data("subject");
        var url = window.location.toString(); //取得當前網址
        var str = ""; //參數中等號左邊的值
        var str_value = ""; //參數中等號右邊的值
        var page = $('#inlineFormCustomSelectPref').val();


        if ($('#inlineFormCustomSelectPref').val() == "") {
          $("#inlineFormCustomSelectPref").focus();
          alert("頁碼沒填寫");
          return false; //這樣就不會執行下面的程式了
        }

        if ($('#note').val() == "") {
          $("#note").focus();
          alert("筆記沒填寫");
          return false; //這樣就不會執行下面的程式了
        }

        if (url.indexOf("?") != -1) {
          //如果網址有"?"符號
          var ary = url.split("?")[1].split("&");
          //取得"?"右邊網址後利用"&"分割字串存入ary陣列 ["a=1","b=2","c=3"]
          for (var i in ary) {
            //取得陣列長度去跑迴圈，如:網址有三個參數，則會跑三次
            str = ary[i].split("=")[0];
            //取得參數"="左邊的值存入str變數中
            if (str == "p_id") {
              //若str等於想要抓取參數 如:b
              str_value = decodeURI(ary[i].split("=")[1]);
              //取得b等號右邊的值並經過中文轉碼後存入str_value
            }
          }
        }
        alert
          (
          "note = " + note + "\n" +
          "user_id = " + user_id + "\n" +
          "p_id = " + p_id + "\n" +
          "article = " + article + "\n" +
          "article_subject = " + article_subject + "\n"
          );

        $.ajax({

          url: "/controller",
          type: "POST",
          data: {
            note: note,
            p_id: p_id,
            user_id: user_id,
            article_id: article,
            article_subject: article_subject,
            page: page,
            action: "save_Note",
          },
          error: function (jqXHR, textStatus, errorThrown) {
            alert(jqXHR, textStatus, errorThrown);
            return;
          },
          success: function (data) {

            alert(data);
            location.reload();
          }

        });

      });
    });
  </script>
